// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": ["$esbuild"],
      "icon": {
        "id": "package",
        "color": "terminal.ansiGreen"
      },
      "label": "npm: build",
      "detail": "pnpm clean && pnpm esbuild -- --production && pnpm esbuild -- --production --web"
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$esbuild-watch"],
      "icon": {
        "id": "sync",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "type": "npm",
      "script": "watch-web",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$esbuild-watch"],
      "icon": {
        "id": "sync",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "delay",
      "type": "shell",
      "command": "sleep 5",
      "windows": {
        "command": "ping 127.0.0.1 -n 5 > nul"
      },
      "group": "none",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": true
      }
    }
  ]
}
