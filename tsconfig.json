{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "out",
    "resolveJsonModule": true
  }
}
