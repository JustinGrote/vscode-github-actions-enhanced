{
  "exclude": ["**/node_modules/**"],
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "out",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "types": ["node", "jest", "git"]
  }
}
